<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="CombatExtended.PatchOperationFindMod">
        <modName>Fantasy Goblins Updated</modName>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Leather_GoblinArmour"]/statBases</xpath>
        <value>
          <Bulk>6</Bulk>
          <WornBulk>2</WornBulk>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Leather_GoblinArmour"]/statBases/StuffEffectMultiplierArmor</xpath>
        <value>
          <StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_GoblinLoinCloth"]/statBases</xpath>
        <value>
          <Bulk>0.3</Bulk>
          <WornBulk>0.1</WornBulk>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Apparel_GoblinLoinCloth"]/statBases/StuffEffectMultiplierArmor</xpath>
        <value>
          <StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Goblin_WarlordArmor"]/statBases/Mass</xpath>
        <value>
          <Bulk>30</Bulk>
          <WornBulk>4.5</WornBulk>
          <Mass>6.5</Mass>
        </value>
      </li>
  		<li Class="PatchOperationReplace">
  			<xpath>Defs/ThingDef[defName="Goblin_WarlordArmor"]/statBases/ArmorRating_Sharp</xpath>
  			<value>
  				<ArmorRating_Sharp>1.4</ArmorRating_Sharp>
  			</value>
  		</li>
  		<li Class="PatchOperationReplace">
  			<xpath>Defs/ThingDef[defName="Goblin_WarlordArmor"]/statBases/ArmorRating_Blunt</xpath>
  			<value>
  				<ArmorRating_Blunt>2.1</ArmorRating_Blunt>
  			</value>
  		</li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Goblin_WarlordArmor"]/equippedStatOffsets</xpath>
        <value>
          <equippedStatOffsets>
            <MeleeDodgeChance>-0.1</MeleeDodgeChance>
          </equippedStatOffsets>
        </value>
      </li>

  		<li Class="PatchOperationReplace">
  			<xpath>Defs/ThingDef[defName="Goblin_BerserkerArmour"]/statBases/StuffEffectMultiplierArmor</xpath>
  			<value>
  				<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
  			</value>
  		</li>
  		<li Class="PatchOperationAdd">
  			<xpath>Defs/ThingDef[defName="Goblin_BerserkerArmour"]/statBases</xpath>
  			<value>
  				<Bulk>14</Bulk>
  				<WornBulk>3</WornBulk>
  			</value>
  		</li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Goblin_Quiver"]/statBases</xpath>
        <value>
          <Bulk>2</Bulk>
          <WornBulk>0.8</WornBulk>
        </value>
      </li>

    </operations>
  </Operation>
</Patch>
